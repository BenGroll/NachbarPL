<div class="flex justify-center">

    <form action="/sign-in" method="post">

        <div class="w-96 mb-2">
    
            <div class="flex flex-col">
                
                <label for="email">
                    <TMPL_VAR NAME="email_label">
                </label>
    
                <input class="border p-1" type="email" id="email" name="email" required>

                <label for="password">
                    <TMPL_VAR NAME="password_label">
                </label>
    
                <input class="border p-1" type="password" id="password" name="password" required>

            </div>
    
        </div>

        <button class="border p-2 w-full bg-slate-50 hover:bg-slate-100">
            <TMPL_VAR NAME="submit">
        </button>
    
    </form>

</div>

